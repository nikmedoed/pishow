<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Settings</title>
    <link href="/static/settings.css" rel="stylesheet"/>
</head>
<body>
<div class="container">
    <h1>Device Settings</h1>
    <div class="device-info">
        <p><strong>ID:</strong> {{ device_id }} <strong>ip:</strong> {{ settings.ip_address }}</p>
        <p><strong>User Agent:</strong> {{ settings.user_agent }}</p>
    </div>
    {% from "components/collections.jinja2" import render_collections %}
    <form method="post" action="{{ form_action }}">
        <label for="device_name">Device Name:</label>
        <input type="text" id="device_name" name="name" value="{{ settings.name }}" placeholder="Enter device name">

        <label for="photo_time">Photo Display Time (sec):</label>
        <input type="number" id="photo_time" name="photo_time" min="5" value="{{ settings.photo_time }}" required>

        <div class="checkbox-group">
            {% for name, label in settings_checks.items() %}
                <label>
                    <input type="checkbox" name="{{ name }}"
                           {% if settings[name] %}checked{% endif %}>
                    {{ label }}
                </label>
            {% endfor %}
        </div>

        <div class="radio-group">
            <p>Video Background:</p>
            <label>
                <input type="radio" name="video_background" value="static"
                       {% if not settings.video_background %}checked{% endif %}>
                Static
            </label>
            <label>
                <input type="radio" name="video_background" value="video"
                       {% if settings.video_background %}checked{% endif %}>
                Video
            </label>
        </div>

        <div class="collections-header">
            <div>
                <p class="collection-title">Collections (folders)</p>
                <p class="collection-hint">Each folder is a separate collection. Only files directly inside a selected folder are used (no subfolders).</p>
                {% set ns = namespace(defs=[]) %}
                {% for cid in default_collections %}
                    {% set _ = ns.defs.append(collection_labels.get(cid, cid or '/')) %}
                {% endfor %}
                <p class="collection-default">Default for new devices: {{ ns.defs|join(', ') }}</p>
                <p class="collection-active">
                    Current: {% if uses_default_collections %}default{% else %}custom selection{% endif %}
                </p>
            </div>
            <div class="collections-actions">
                {% if show_default_controls %}
                    <button type="submit" class="btn btn-clear"
                            formaction="{{ reset_action }}"
                            formmethod="post">
                        Reset to default
                    </button>
                {% endif %}
            </div>
        </div>

        {{ render_collections(collections, selected_collections, show_quick_start=True, quick_action=quick_start_action) }}

        <div class="form-actions">
            <button type="submit" class="btn">Save Settings</button>
        </div>
    </form>
    <a href="/admin" class="admin-link">Admin panel</a>
</div>
</body>
</html>
